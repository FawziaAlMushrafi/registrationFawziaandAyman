<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


 <EditText
     android:id="@+id/name"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="108dp"
     android:layout_marginTop="12dp"
     android:ems="10"
     android:hint="name"
     android:inputType="textPersonName"
     android:textColor="#F30A0A"
     android:textStyle="bold|italic"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <EditText
     android:id="@+id/Email"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="20dp"
     android:ems="10"
     android:hint="Email"
     android:inputType="textEmailAddress"
     android:textColor="#E61111"
     android:textStyle="bold|italic"
     app:layout_constraintEnd_toEndOf="@+id/name"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/name"
     app:layout_constraintTop_toBottomOf="@+id/name" />

 <EditText
     android:id="@+id/editTextTextPassword1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="24dp"
     android:ems="10"
     android:hint="password"
     android:inputType="textPassword"
     android:textColor="#E30A0A"
     android:textStyle="bold|italic"
     app:layout_constraintStart_toStartOf="@+id/Email"
     app:layout_constraintTop_toBottomOf="@+id/Email" />

 <EditText
     android:id="@+id/editTextTextPassword2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="20dp"
     android:ems="10"
     android:hint="re password"
     android:inputType="textPassword"
     android:textColor="#F40E0E"
     app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword1"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/editTextTextPassword1"
     app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword1" />

 <EditText
     android:id="@+id/birth"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="28dp"
     android:ems="10"
     android:hint="data birth"
     android:inputType="date"
     app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword2"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/editTextTextPassword2"
     app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2" />

 <RadioGroup
     android:id="@+id/radioGroup"
     android:layout_width="167dp"
     android:layout_height="97dp"
     android:layout_marginTop="32dp"
     android:checkedButton="@id/male"
     app:layout_constraintEnd_toEndOf="@+id/birth"
     app:layout_constraintHorizontal_bias="0.492"
     app:layout_constraintStart_toStartOf="@+id/birth"
     app:layout_constraintTop_toBottomOf="@+id/birth">

  <RadioButton
      android:id="@+id/male"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:text="male"
      android:textColor="#FB0E0E"
      android:textStyle="bold|italic" />

  <RadioButton
      android:id="@+id/f"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="famle"
      android:textColor="#EF0F0F"
      android:textStyle="bold|italic" />
 </RadioGroup>

 <Button
     android:id="@+id/register"
     android:layout_width="310dp"
     android:layout_height="51dp"
     android:layout_marginTop="32dp"
     android:text="register"
     app:layout_constraintEnd_toEndOf="@+id/radioGroup"
     app:layout_constraintStart_toStartOf="@+id/radioGroup"
     app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

 <TextView
     android:id="@+id/massage"
     android:layout_width="336dp"
     android:layout_height="63dp"
     android:layout_marginTop="33dp"
     android:textColor="@color/white"
     app:layout_constraintEnd_toEndOf="@+id/register"
     app:layout_constraintStart_toStartOf="@+id/register"
     app:layout_constraintTop_toBottomOf="@+id/register" />

 <TextView
     android:id="@+id/textView3"
     android:layout_width="47dp"
     android:layout_height="31dp"
     android:text="name :"
     app:layout_constraintBottom_toBottomOf="@+id/name"
     app:layout_constraintEnd_toStartOf="@+id/name"
     app:layout_constraintTop_toTopOf="@+id/name" />

 <TextView
     android:id="@+id/textView4"
     android:layout_width="44dp"
     android:layout_height="24dp"
     android:text="Email :"
     app:layout_constraintBottom_toBottomOf="@+id/Email"
     app:layout_constraintEnd_toStartOf="@+id/Email"
     app:layout_constraintHorizontal_bias="0.846"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="@+id/Email" />

 <TextView
     android:id="@+id/textView5"
     android:layout_width="71dp"
     android:layout_height="20dp"
     android:layout_marginEnd="8dp"
     android:text="password :"
     app:layout_constraintBottom_toBottomOf="@+id/editTextTextPassword1"
     app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword1"
     app:layout_constraintTop_toTopOf="@+id/editTextTextPassword1" />

 <TextView
     android:id="@+id/textView6"
     android:layout_width="82dp"
     android:layout_height="52dp"
     android:text="conform password :"
     app:layout_constraintBottom_toBottomOf="@+id/editTextTextPassword2"
     app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword2"
     app:layout_constraintTop_toTopOf="@+id/editTextTextPassword2" />

 <TextView
     android:id="@+id/textView7"
     android:layout_width="80dp"
     android:layout_height="15dp"
     android:text="Birth date :"
     app:layout_constraintBottom_toBottomOf="@+id/birth"
     app:layout_constraintEnd_toStartOf="@+id/birth"
     app:layout_constraintTop_toTopOf="@+id/birth"
     app:layout_constraintVertical_bias="0.6" />

 <TextView
     android:id="@+id/textView8"
     android:layout_width="63dp"
     android:layout_height="54dp"
     android:layout_marginEnd="8dp"
     android:text="you gander :"
     app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
     app:layout_constraintEnd_toStartOf="@+id/radioGroup"
     app:layout_constraintTop_toTopOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>